{
	"compilerOptions": {
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "./.out",
		"baseUrl": "src",
		"lib": [
			"es5",
			"es2015.iterable",
			"es2015.collection",
			"es2015.promise",
			"dom"
		]
	},
	"formatCodeOptions": {
		"indentSize": 4,
		"tabSize": 4
	},
	"include": [
		"src/**/*.ts",
		"node_modules/@types",
		"node_modules/obd-parser/lib/*.d.ts"
	]
}